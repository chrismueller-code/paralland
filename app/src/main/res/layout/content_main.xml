<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/showText1"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:text="@string/result_1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/showText2"
        app:layout_constraintEnd_toStartOf="@+id/progressBar1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showText2" />

    <TextView
        android:id="@+id/showText2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:text="@string/result_2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/run2"
        app:layout_constraintEnd_toStartOf="@+id/progressBar2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/run2"
        app:layout_constraintVertical_bias="0.513" />

    <TextView
        android:id="@+id/showText3"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:text="@string/result_3"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/progressBar3"
        app:layout_constraintStart_toStartOf="@+id/showText2"
        app:layout_constraintTop_toBottomOf="@+id/showText2" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/run1"
        app:layout_constraintEnd_toStartOf="@+id/run1"
        app:layout_constraintTop_toTopOf="@+id/run1"
        app:layout_constraintVertical_bias="0.3" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/run2"
        app:layout_constraintEnd_toStartOf="@+id/run2"
        app:layout_constraintTop_toTopOf="@+id/run2" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/showText3"
        app:layout_constraintEnd_toStartOf="@+id/run3"
        app:layout_constraintTop_toTopOf="@+id/showText3"
        app:layout_constraintVertical_bias="0.354" />

    <ImageView
        android:id="@+id/run1"
        android:layout_width="104dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/showText1"
        app:layout_constraintStart_toEndOf="@+id/progressBar2"
        app:layout_constraintTop_toTopOf="@+id/showText1"
        app:srcCompat="@drawable/ic_play_circle_outline_24px" />

    <ImageView
        android:id="@+id/run2"
        android:layout_width="104dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_circle_outline_24px" />

    <ImageView
        android:id="@+id/run3"
        android:layout_width="104dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar2"
        app:layout_constraintTop_toTopOf="@+id/progressBar3"
        app:srcCompat="@drawable/ic_play_circle_outline_24px" />

    <ImageView
        android:id="@+id/clear"
        android:layout_width="108dp"
        android:layout_height="74dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/showText3"
        app:layout_constraintTop_toBottomOf="@+id/run3"
        app:srcCompat="@drawable/ic_undo_24px" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>